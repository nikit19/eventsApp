<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nikit.eventsapp.EventsFragment"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_gravity="center"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_marginTop="@dimen/layout_margin_extra_large"
        app:cardBackgroundColor="@color/white"
        android:layout_height="300dp">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressHeaderUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="User Name"
                android:textAlignment="center"
                android:id="@+id/first_name_tv"
                android:textSize="@dimen/text_size_expanded_title"
                android:textColor="@color/black"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="example@gmail.com"
                android:textAlignment="center"
                android:id="@+id/email_tv"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/greyMore"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout_btn"
                android:text="LOGOUT"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="125dp"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="@dimen/card_elevation"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_margin_extra_large"
        android:layout_height="125dp">
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="110dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:id="@+id/avatar_image_view"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="110dp" />
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

</FrameLayout>